# Docker Compose Environment Configuration

# Number of tenants to create
TENANT_COUNT=2

# Total number of devices to create (distributed across tenants)
DEVICE_COUNT=2

# Protocols to use for load testing (comma-separated)
# Options: mqtt,http,coap,amqp,lora
PROTOCOLS=mqtt,http

# Type of messages to send
# Options: telemetry, event
MESSAGE_TYPE=telemetry

# Message sending interval in seconds
MESSAGE_INTERVAL=10

# Number of loadgen service replicas
LOADGEN_REPLICAS=1

# Logging level
LOG_LEVEL=INFO

# Test configuration
# Options: 10fast, 100slow, custom, tiny
TEST_MODE=tiny

# MQTT configuration
# Set to "true" to use insecure port 1883 instead of TLS port 8883
USE_MQTT_INSECURE=false